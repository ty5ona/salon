{
  "name": "salon-booking-system/plugin",
  "description": "WordPress plugin for salon booking and appointment scheduling",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Salon Booking System",
      "email": "info@salonbookingsystem.com"
    }
  ],
  "require": {
    "php": ">=7.4.8"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.5.*",
    "wp-coding-standards/wpcs": "2.3.*"
  },
  "scripts": {
    "phpcs": "phpcs --standard=WordPress .",
    "phpcbf": "phpcbf --standard=WordPress ."
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
